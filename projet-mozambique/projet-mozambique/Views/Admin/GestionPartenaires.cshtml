@using projet_mozambique.Utilitaires;
@using projet_mozambique.Models;

@model PARTENAIRE

@{
    ViewBag.Title = Resources.Partenaire.modifierSupprimerPartenaire;
    
    Html.RenderPartial("~/Views/Shared/AfficherMsg.cshtml");

    var listePartenaires = ViewData[Constantes.CLE_PARTENAIRES] as List<PARTENAIRE>;

    <h1>@Resources.Partenaire.modifierSupprimerPartenaire</h1>
            
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.DropDownListFor(model => model.ID, new SelectList(listePartenaires, "ID", "NOM"), "", new { @class = "lst-options-nouvelles" })

        <input type="submit" name="modifier" value="@Resources.Shared.modifier" id="btnModif" class="btnForm" /> 
        <input type="submit" name="supprimer" value="@Resources.Shared.supprimer" id="btnSupp" class="btnForm" />
    }
}
