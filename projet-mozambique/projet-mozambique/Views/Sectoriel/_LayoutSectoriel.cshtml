<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Projet Mozambique - @ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700' rel='stylesheet' type='text/css'>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    @Styles.Render("~/Content/cssSectoriel")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div id="all">
        <header>
            <div class="connexion">
                <div class="user_name">
                    <p>Nom de l'utilisateur</p>
                    <div class="icons">
                        <img src="~/Content/images/mail.png" title="Messagerie" />
                        <img src="~/Content/images/profile.png" title="Profil" />
                    </div>
                 </div>
                @Html.ActionLink("Se déconnecter", "Index", "public", new { logout = 1 }, new { @class = "logout" })
            </div>
            <div class="titre-header">
                <span class="main-titre">Mozambique</span><br />
                <span class="sous-titre">Portail pédagogique</span>
            </div>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Accueil", "Index")</li>
                    <!-- La gestion du contenu de la section publique devrait se faire dans l'administration ou ici -->
                    <li>@Html.ActionLink("Documents", "Documents")</li>
                    <li>@Html.ActionLink("Forum", "#")</li>
                    <li>@Html.ActionLink("Sondages", "#")</li>
                </ul>
            </nav>
        </header>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
