<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Portail Mozambique - @ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/cssPublic")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="all">
        <header>
            <div class="connexion">
                <div id="topnav">@Html.ActionLink("Se connecter", "Index", "admin")</div>
            </div>
            <div class="titre-header">
                @Html.ActionLink("Mozambique", "Index", new { controller = "Public" }, new {@class="main-titre"})<br />
                @Html.ActionLink("Portail Pédagogique", "Index", new { controller = "Public" }, new { @class = "sous-titre" })
            </div>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Accueil", "Index")</li>
                    <li>@Html.ActionLink("Nouvelles", "nouvelles")</li>
                    <li>@Html.ActionLink("Partenaires", "partenaires")</li>
                    <li>@Html.ActionLink("Qui sommes-nous?", "apropos")</li>
                    <li>@Html.ActionLink("Nous joindre", "nousjoindre")</li>
                </ul>
            </nav>
        
        </header>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
